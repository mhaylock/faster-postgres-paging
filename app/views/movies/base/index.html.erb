<div class="movies">
  <div class="navigation">
    <ul>
      <li>Page: <%= page %></li>
      <% if benchmark_direction %>
        <li>Direction: <%= benchmark_direction %></li>
      <% end %>
      <li>Time: <%= @query_time %>s</li>
      <li><%= link_to "Previous Page", previous_page_path %></li>
      <li><%= link_to "Next Page", next_page_path %></li>
    </ul>
  </div>
  <div class="contents">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Year</th>
          <th>Runtime (minutes)</th>
          <th>Genres</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'movie', collection: @movies %>
      </tbody>
    </table>
  </div>
</div>
<% if next_benchmark_path.present? %>
  <script>
    Turbolinks.visit("<%= next_benchmark_path %>");
  </script>
<% end %>
